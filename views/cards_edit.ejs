<%- include("partials/header") %>
 
     <div class="container">
        <form action = "/cards/<%=card._id%>?_method=PUT" method = "POST" >
            <h1>Edit Card</h1>
            <br>
            <!-- Top Row -->
            <div class = "row">
             <div class="col-md-6 ">
                <label for= "name" class="form-label ">Card Name</label>
                <input type="text"  class="form-control" id="inputdefault" name ="name" value = "<%= card.name %>" >
             </div>
             
             <div class = "col-md-6">
                <label for="cmc" class="form-label">CMC</label>
                <input type="text" class="form-control" name ="cmc" value = "<%= card.cmc %>" >
             </div>
            </div>

            <div class="form-group">
                <label for="image" class="form-label">Image Link</label>
                <input type="text" class="form-control" name ="image" value = "<%= card.image %>" >
             </div>

             
            <!-- 2nd Row -->
            <div class = "row">
             <div class = "col-md-6">
                <label for="cardType" class="form-label">Card Type</label>
                <input type="text" class="form-control" name ="cardType" value = "<%= card.cardType %>">
             </div>

             <div class = "col-md-6">
                <label for="subTypes" class="form-label">Sub Types</label>
                <input type="text" class="form-control" name ="subTypes" value = "<%= card.subTypes %>">
             </div>
            </div>

            <div class = "form-group">
                <label for="keywords" class="form-label">Keywords</label>
                <input type="text" class="form-control" name ="keywords" value = "<%= card.keywords %>">
             </div>

             <div class="form-group">
                <label for="description" class="form-label">Description</label>
                <!--<input type="text" class="form-control" name ="description" value = "<%= card.description %>"> -->
                <textarea class="form-control" rows="5" name ="description"><%= card.description %>"</textarea>

             </div>

             <!-- 3rd Row -->
             <div class = "row">
             <div class = "col-md-4">
                <label for="attack" class="form-label">Attack</label>
                <input type="text" class="form-control" name ="attack" value = "<%= card.attack %>">
             </div>

             <div class = "col-md-4">
                <label for="health" class="form-label">Health</label>
                <input type="text" class="form-control" name ="health" value = "<%= card.health %>">
             </div>
             
             <!--add if statements to everything btw -->
             <div class = "col-md-4">
                <label for="loyalty" class="form-label">Loyalty</label>
                <input type="text" class="form-control" name ="loyalty" value = "<%= card.loyalty %>">
             </div>

            </div>

           

            
             <br>
             <br>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <%- include ("partials/footer") %>